<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Inai.App.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Inai.App"
       xmlns:pages="clr-namespace:Inai.App.Pages"
       Title="Inai.App">

    <TabBar>
        <ShellContent Title="Chat"
                      ContentTemplate="{DataTemplate pages:ChatPage}"
                      Icon="chat.png" />
        <ShellContent Title="Tasks"
                      ContentTemplate="{DataTemplate pages:TaskPage}"
                      Icon="task.png" />
        <ShellContent Title="Payments"
                      ContentTemplate="{DataTemplate pages:PaymentPage}"
                      Icon="payment.png" />
        <ShellContent Title="Health"
                      ContentTemplate="{DataTemplate pages:HealthPage}"
                      Icon="health.png" />
    </TabBar>

</Shell>
